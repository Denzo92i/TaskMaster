<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taskmaster.controllers.ProjectManagementController"
            prefWidth="1200" prefHeight="700"
            styleClass="root">

    <!-- SIDEBAR -->
    <left>
        <VBox spacing="0" styleClass="sidebar" prefWidth="250">
            <padding>
                <Insets top="20" right="0" bottom="20" left="0"/>
            </padding>

            <VBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <Label text="TASKMASTER" styleClass="title"/>
                <Label fx:id="welcomeLabel" text="Projets - Admin System" styleClass="subtitle"/>
            </VBox>

            <Separator/>

            <VBox spacing="5">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Button text="⬅️ Retour Dashboard" onAction="#goBack"
                        maxWidth="Infinity" styleClass="nav-button"/>
            </VBox>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <VBox spacing="20" styleClass="content-area">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Top Bar -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Gestion des Projets" styleClass="page-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="➕ Nouveau Projet" onAction="#createNewProject"
                        styleClass="button, success-button"/>
            </HBox>

            <!-- Feedback Label -->
            <Label fx:id="feedbackLabel" text="" visible="false"/>

            <!-- Filters -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Filtrer par statut :" styleClass="form-label"/>
                <ComboBox fx:id="statusFilter" onAction="#applyFilter" prefWidth="200"/>
            </HBox>

            <!-- Table -->
            <TableView fx:id="projectsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Nom du Projet" prefWidth="300"/>
                    <TableColumn fx:id="statusColumn" text="Statut" prefWidth="150"/>
                    <TableColumn fx:id="startDateColumn" text="Date Début" prefWidth="150"/>
                    <TableColumn fx:id="endDateColumn" text="Date Fin" prefWidth="150"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200"/>
                </columns>
                <!-- ⭐ CORRECTION ⭐ -->
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>