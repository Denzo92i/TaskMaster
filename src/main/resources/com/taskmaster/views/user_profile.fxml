<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taskmaster.controllers.UserProfileController"
            prefWidth="800" prefHeight="500">

    <!-- HEADER -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Mon Profil" style="-fx-text-fill: white; -fx-font-size: 20px;"/>
        </HBox>
    </top>

    <!-- CONTENT -->
    <center>
        <VBox spacing="15" style="-fx-padding: 30;">

            <Label text="Informations personnelles" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <Label text="Prénom :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="firstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false"/>

                <Label text="Nom :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="lastNameField" GridPane.rowIndex="1" GridPane.columnIndex="1" editable="false"/>

                <Label text="Email :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1" editable="false"/>

                <Label text="Rôle :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="roleField" GridPane.rowIndex="3" GridPane.columnIndex="1" editable="false"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Modifier" onAction="#enableEditing"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
                <Button text="Enregistrer" onAction="#saveProfile"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>
