        <!-- Date de fin -->
        <Label text="Date fin :" GridPane.rowIndex="3" styleClass="form-label"/>
        <DatePicker fx:id="endDatePicker"
                    GridPane.columnIndex="1" GridPane.rowIndex="3"
                    prefWidth="200"/>

        <!-- Statut -->
        <Label text="Statut :" GridPane.rowIndex="4" styleClass="form-label"/>
        <ComboBox fx:id="statusComboBox"
