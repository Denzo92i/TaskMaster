<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taskmaster.controllers.TaskManagementController"
            prefWidth="1200" prefHeight="700"
            styleClass="root">

    <!-- SIDEBAR -->
    <left>
        <VBox spacing="0" styleClass="sidebar" prefWidth="250">
            <padding>
                <Insets top="20" right="0" bottom="20" left="0"/>
            </padding>

            <!-- Logo + texte -->
            <VBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <Label text="TASKMASTER" styleClass="title"/>
                <Label fx:id="welcomeLabel" text="Gestion des Tâches" styleClass="subtitle"/>
            </VBox>

            <Separator/>

            <VBox spacing="5">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Button text="⬅️ Retour Dashboard" onAction="#goBack"
                        maxWidth="Infinity" styleClass="nav-button"/>
            </VBox>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <VBox spacing="20" styleClass="content-area">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Top Bar -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Gestion des Tâches" styleClass="page-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="➕ Nouvelle Tâche" onAction="#createNewTask"
                        styleClass="button,success-button"/>
            </HBox>

            <!-- Feedback Label -->
            <Label fx:id="feedbackLabel" text="" visible="false"/>

            <!-- Filters -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Filtrer :" styleClass="form-label"/>
                <Label text="Statut :"/>
                <ComboBox fx:id="filterStatus" onAction="#applyFilters" prefWidth="150"/>
                <Label text="Priorité :"/>
                <ComboBox fx:id="filterPriority" onAction="#applyFilters" prefWidth="150"/>
                <Label text="Projet :"/>
                <ComboBox fx:id="filterProject" onAction="#applyFilters" prefWidth="200"/>
            </HBox>

            <!-- Table of Tasks -->
            <TableView fx:id="tasksTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="titleColumn" text="Titre" prefWidth="250"/>
                    <TableColumn fx:id="projectColumn" text="Projet" prefWidth="180"/>
                    <TableColumn fx:id="assignedColumn" text="Assigné à" prefWidth="150"/>
                    <TableColumn fx:id="priorityColumn" text="Priorité" prefWidth="100"/>
                    <TableColumn fx:id="statusColumn" text="Statut" prefWidth="120"/>
                    <TableColumn fx:id="dueDateColumn" text="Date limite" prefWidth="120"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

</BorderPane>