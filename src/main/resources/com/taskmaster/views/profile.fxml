<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taskmaster.controllers.ProfileController"
            prefWidth="800" prefHeight="600">

    <!-- Sidebar -->
    <left>
        <VBox spacing="0" style="-fx-background-color: #2c3e50;" prefWidth="200">
            <padding>
                <Insets top="20" right="0" bottom="20" left="0"/>
            </padding>

            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
                <Label text="TASKMASTER" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label text="Profil" style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px;"/>
            </VBox>

            <Separator style="-fx-background-color: #34495e;"/>

            <VBox spacing="5" style="-fx-padding: 10;">
                <Button text="⬅️ Retour Dashboard" onAction="#goBack"
                        maxWidth="Infinity"
                        style="-fx-background-color: #3498db; -fx-text-fill: white;
                        -fx-alignment: CENTER_LEFT; -fx-padding: 15; -fx-font-size: 14px; -fx-cursor: hand;"/>
            </VBox>
        </VBox>
    </left>

    <!-- Content -->
    <center>
        <VBox spacing="20" style="-fx-background-color: #ecf0f1;" alignment="TOP_CENTER">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label text="Mon Profil" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

            <GridPane hgap="20" vgap="15">
                <Label text="Nom :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="nameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Email :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="emailLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Rôle :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="roleLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>
        </VBox>
    </center>
</BorderPane>
